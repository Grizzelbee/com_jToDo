<?xml version="1.0" encoding="utf-8"?><form><!--Project : jTODO for Joomla Filename: /admin/models/forms/todo.xmlVersion : 1.0.0--><field  name = "id"            type = "hidden"/><!-- Felder: name, startdate, enddate, status, published, updated, inserted , fk_category--><field  name        = "name"          type        = "text"          label       = "COM_JTODO_TODO"         description = "COM_JTODO_TODO_DESC"          class       = "inputbox"          size        = "128"           required    = "true" /><field    name        = "fk_project"     type        = "projects"    label       = "COM_JTODO_PROJECT"     description = "COM_JTODO_PROJECT_DESC"     default     = "0"     class       = "inputbox"    size        = "1"/><field    name        = "fk_category"     type        = "categories"    label       = "COM_JTODO_CATEGORY"     description = "COM_JTODO_CATEGORY_DESC"     default     = "0"     class       = "inputbox"    size        = "1"/><field    name        = "published"     type        = "radio"    label       = "COM_JTODO_PUBLISHED"     description = "COM_JTODO_PUBLISHED_DESC"     default     = "0"     class       = "inputbox">    <option value="1">JYES</option>    <option value="0">JNO</option></field><field    name        = "status"     type        = "radio"    label       = "COM_JTODO_STATUS"     description = "COM_JTODO_STATUS_DESC"     default     = "0"     class       = "inputbox">    <option value="1">JYES</option>    <option value="0">JNO</option></field><field    name        = "targetdate"    type        = "calendar"    label       = "COM_JTODO_TARGETDATE"    description = "COM_JTODO_TARGETDATE_DESC"      size        = "40"    class       = "inputbox"/><field    name        = "inserted"    type        = "calendar"    label       = "COM_JTODO_INSERTED"    description = "COM_JTODO_INSERTED_DESC"      size        = "40"    class       = "inputbox"    readonly    = "true"/><field    name        = "updated"    type        = "calendar"    label       = "COM_JTODO_UPDATED"    description = "COM_JTODO_UPDATED_DESC"      size        = "40"    class       = "inputbox"    readonly    = "true"/></form>
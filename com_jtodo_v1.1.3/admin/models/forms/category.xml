<?xml version="1.0" encoding="utf-8"?><form><!--Project : jTODO for Joomla Filename: /admin/models/forms/category.xmlVersion : 1.1.3--><field  name = "id"            type = "hidden"/><!-- Felder: name, ordering, published --><field  name        = "name"          type        = "text"          label       = "COM_JTODO_CATEGORY_NAME"         description = "COM_JTODO_CATEGORY_NAME_DESC"          class       = "inputbox"          size        = "128"           required    = "true" /><field    name        = "ordering"     type        = "text"    label       = "COM_JTODO_ORDERING"     description = "COM_JTODO_ORDERING_DESC"      default     = "0"     class       = "inputbox"></field><field    name        = "published"     type        = "radio"    label       = "COM_JTODO_PUBLISHED"     description = "COM_JTODO_PUBLISHED_DESC"      default     = "1"     class       = "btn-group">    <option value="1">JYES</option>    <option value="0">JNO</option></field></form>